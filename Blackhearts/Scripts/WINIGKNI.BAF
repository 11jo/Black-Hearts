IF
	See([PC])
	NumTimesTalkedTo(0)
THEN
	RESPONSE #100
		SmallWait(6)
		StartDialog("WINIGKNI",[PC])
END

IF
	Global("BHBG1Quest","GLOBAL",13)
	AreaCheck("%CentralBaldursGate%")
THEN
	RESPONSE #100
		UseItem("POTN10",Myself)
		SmallWait(2)
		DisplayStringHead(Myself,@5034)
		Wait(3)
		DestroySelf()
END

